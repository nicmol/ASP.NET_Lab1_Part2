
@{
    Layout = "_FormLayout";
    ViewData["Title"] = "Add User";
}
<!DOCTYPE>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add users here</title>
</head>
<body>
    <div>
        <p>View and Add Users Here</p>
    </div>
    <form asp-action="AddUser" method="post">
        <div class="form-group">
            <label for="firstName">First Name:</label>
            <input class="form-control col-6" name="firstName" /><br />
        </div>
        <div class="form-group">
            <label for="lastName">Last Name:</label>
            <input class="form-control col-6" name="lastName" /><br />
        </div>
        <div class="form-group">
            <label for="email">Email:</label>
            <input class="form-control col-6" name="email" /><br />
        </div>
         <div class="form-group">
            <button class="btn btn-default" type="submit">Add User</button>
        </div>
    </form>
</body>
</html>
